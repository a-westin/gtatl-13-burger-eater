<div class="jumbotron jumbotron-fluid">
  <div class="container">
  </div>
</div><div class="container my-5">
    <div class="row">
        <div class="col">
            <h2 class="text-center">Choose a burger or add a new one!</h2>
                 <ul class="list-group">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger_list devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
        </div>
        <div class="col">
            <h2 class="text-center">These burgers are all gone!</h2>
                <ul class="list-group">
        {{#each burgers}}
        {{#if devoured}}
        {{> burger_list devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
        </div>
    </div>
    <div class="row">
    <div class="col-sm-12 text-center">
      <form class="create-form my-5">
        <h2>Add new burger</h2>
        <div class="form-group">
          <label for="ca">What'll ya have?</label>
          <input type="text" id="ca" name="name">
        </div>
        <button type="submit" class="btn btn-success">Add it!</button>
      </form>
    </div>
  </div>
</div>

